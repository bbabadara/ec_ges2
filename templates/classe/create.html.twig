{% extends 'base.html.twig' %}

{% block pageTitle %}Ajout de Classe{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-semibold text-center mb-4">Ajouter une nouvelle classe</h1>

        <!-- Affichage du formulaire -->
        <form method="post" action="{{ path('classe_create') }}" class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-lg">
            {{ form_start(formClasse) }}
                
            <div class="mb-4">
                {{ form_row(formClasse.nom, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
            </div>

            <div class="mb-4">
                {{ form_row(formClasse.createAt, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
            </div>

            <div class="mb-4">
                {{ form_row(formClasse.updateAt, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md'}}) }}
            </div>

            <div class="flex justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">
                    Ajouter
                </button>
                <a href="{{ path('classe_index') }}" class="bg-gray-300 hover:bg-gray-500 text-gray-700 font-bold py-2 px-4 rounded-lg">
                    Retour
                </a>
            </div>
            
            {{ form_end(formClasse) }}
        </form>

        <!-- Affichage des erreurs de formulaire -->
        {% if formClasse.vars.errors|length > 0 %}
            <div class="mt-4 text-red-500">
                <ul>
                    {% for error in formClasse.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}
