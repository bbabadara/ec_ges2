{% extends 'base.html.twig' %}

{% block bodyTitle %}Liste des classes{% endblock %}

{% block body %}
    <div class="flex justify-end mb-4">
        <form method="get" action="{{ path('classe_index') }}" class="flex items-center space-x-4">
            <!-- Sélecteur pour le niveau -->
            <div>
                <label for="niveau" class="block text-sm font-medium text-gray-700">Niveau</label>
                <select name="niveau" id="niveau" class="border border-gray-300 rounded-lg p-2">
                    <option value="">-- Sélectionner un niveau --</option>
                    {% for niveau in niveaux %}
                        <option value="{{ niveau.id }}" {% if niveau.id == selectedNiveau %}selected{% endif %}>
                            {{ niveau.nom }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Sélecteur pour la filière -->
            <div>
                <label for="filiere" class="block text-sm font-medium text-gray-700">Filière</label>
                <select name="filiere" id="filiere" class="border border-gray-300 rounded-lg p-2">
                    <option value="">-- Sélectionner une filière --</option>
                    {% for filiere in filieres %}
                        <option value="{{ filiere.id }}" {% if filiere.id == selectedFiliere %}selected{% endif %}>
                            {{ filiere.nom }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Bouton pour appliquer les filtres -->
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">
                Filtrer
            </button>
        </form>
    </div>

    <div class="flex justify-end">
        <a href="{{ path('classe_create') }}" class="bg-blue-500 hover:bg-blue-700 text-center text-white font-bold w-28 h-10 mx-2 p-2 rounded-lg">Ajouter</a>
    </div>

    <table class="w-full border-collapse border border-gray-300 mt-2">
        <thead>
            <tr class="bg-gray-100">
                <th class="border border-gray-300 p-2 text-left">ID</th>
                <th class="border border-gray-300 p-2 text-left">Nom</th>
                <th class="border border-gray-300 p-2 text-left">Filière</th>
                <th class="border border-gray-300 p-2 text-left">Niveau</th>
                <th class="border border-gray-300 p-2 text-left">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for classe in data %}
                <tr>
                    <td class="border border-gray-300 p-2">{{ classe.id }}</td>
                    <td class="border border-gray-300 p-2">{{ classe.nom }}</td>
                    <td class="border border-gray-300 p-2">{{ classe.filiere.nom }}</td>
                    <td class="border border-gray-300 p-2">{{ classe.niveau.nom }}</td>
                    <td class="border border-gray-300 p-2">
                        <a href="{{ path('etudiant_index', {'classe': classe.id}) }}" class="text-center text-blue-500 font-bold w-28 h-10 mx-2 p-2">
                            Etudiants
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="flex justify-end mt-4">
        {% if page > 1 %}
            <a href="{{ path('classe_index', {'page': page - 1}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg mr-2">
                Précédent
            </a>
        {% endif %}

        <div class="flex items-center space-x-2">
            {% for i in 1..nbrPages %}
                <a href="{{ path('classe_index', {'page': i}) }}" class="py-2 px-4 text-sm rounded-lg
                    {% if i == page %}
                        bg-blue-500 text-white
                    {% else %}
                        bg-gray-200 hover:bg-gray-300 text-gray-700
                    {% endif %}
                ">
                    {{ i }}
                </a>
            {% endfor %}
        </div>

        {% if page < nbrPages %}
            <a href="{{ path('classe_index', {'page': page + 1}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg ml-2">
                Suivant
            </a>
        {% endif %}
    </div>
{% endblock %}
